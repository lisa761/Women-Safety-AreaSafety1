<%- include("../partials/header") %>

<div class="container">
	<div class="row">
		<h1 style="text-align: center">
			Edit Contact
		</h1>
		<div style="width: 30%; margin: 25px auto;">
			<form action="/users/<%= currentUser._id %>/<%= contact._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="contact[name]" value="<%= contact.name %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="contact[phonenumber]" value="<%= contact.phonenumber %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="email" name="contact[email]" value="<%= contact.email %>">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-default btn-block btn-primary">
						Submit!
					</button>
				</div>
			</form>
			<a href="/users/<%= currentUser._id %>">Go Back</a>
		</div>
	</div>
</div>

<%- include("../partials/footer") %>